<Window x:Class="Restaurant.View.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Restaurant.View"
        mc:Ignorable="d"
        Title="LoginView" Height="550" Width="800"
        WindowStyle="SingleBorderWindow"
 
        WindowStartupLocation="CenterScreen"
        Background="Transparent">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="29*"/>
            <ColumnDefinition Width="764*"/>
            <ColumnDefinition Width="7*"/>
        </Grid.ColumnDefinitions>
        <!-- Imagen de fondo -->
        <Image Source="pack://application:,,,/Imagenes/fondo.png"
            Stretch="Fill"
            Panel.ZIndex="0" Grid.ColumnSpan="3" />


        <Grid Margin="20,20,13,20" Panel.ZIndex="1" Grid.ColumnSpan="2">
            <Border Background="#80FFA500" CornerRadius="15,15,0,0" Margin="213,14,213,250">
                <TextBlock Text="¡Bienvenido!"
                           Foreground="White"
                           FontSize="42"
                           FontWeight="Heavy"
                           FontFamily="Pristina"
                           TextWrapping="Wrap"
                           TextAlignment="Center" Margin="57,123,57,71"/>
            </Border>
            <Border Background="White" CornerRadius="0,0,15,15" Margin="213,216,213,90"/>
            <TextBlock Text="Sesion de Usuario"
                   FontFamily="Segoe UI"
                   FontSize="18"
                   FontWeight="Medium"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   Margin="0,218,0,0"
                   Foreground="DarkOrange" RenderTransformOrigin="0.505,1.262"/>
            <StackPanel Width="220"
                        Orientation="Vertical"
                        Margin="270,0,270,35">
                <Image Source="pack://application:,,,/Imagenes/logo.png" Width="130" Height="100"/>
                <TextBlock Text="¡Que bueno tenerte de vuelta en nuestro sitio!"
                           TextWrapping="Wrap"
                           TextAlignment="Center"
                           Foreground="Black"
                           FontFamily="Gabriola"
                           FontSize="14"
                           FontWeight="Medium"
                           Height="34" Width="220"/>
                <Canvas Background="LightGray"/>
            </StackPanel>
            <TextBox x:Name="InicioSES"
                         Padding="10"
                         VerticalContentAlignment="Center"
                         HorizontalContentAlignment="Left"
                         FlowDirection="LeftToRight"
                         FontSize="7"
                         Background="#f5b5a7"
                         Text="Nombre de Usuario"
                     Foreground="White"
                         Margin="288,265,288,201" TextAlignment="Center"/>
            <Border BorderBrush="Gray" BorderThickness="2" CornerRadius="10" Margin="288,265,288,201"/>
            <TextBox x:Name="ContrInicio"
                     Padding="10"
                     VerticalContentAlignment="Center"
                     HorizontalContentAlignment="Left"
                     FlowDirection="LeftToRight"
                     FontSize="7"
                     Background="#f5b5a7"
                     Text="Correo"
                     Foreground="White"
                     Margin="288,318,288,149" TextAlignment="Center"/>
            <Border BorderBrush="Gray" BorderThickness="2" CornerRadius="10" Margin="288,318,288,149"/>
            <Button x:Name="IniciarSesionButton"
                    Content="INICIAR SESIÓN"
                    FontSize="10"
                    FontWeight="Medium"
                    Width="92"
                    Height="21"
                    Background="#f6a896"
                    Foreground="White"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Margin="0,365,0,0">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1" CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Grid>
    </Grid>



    <!--Esto es un comentario-->
</Window>